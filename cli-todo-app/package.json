{
  "name": "cli-todo-app",
  "version": "1.0.0",
  "description": "A command-line todo application",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "todo": "dist/todo.cjs"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/todo.cjs --banner:js='#!/usr/bin/env node'",
    "dev": "npm run build && node dist/todo.cjs",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "todo",
    "task-manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
